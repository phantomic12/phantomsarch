post_install() {
	instructions_install
}

post_upgrade() {
	instructions_upgrade
}

instructions_install() {
	cat <<-EOT

	Restart GNOME Shell ([Alt]+[F2], r).
	Activate the extension with gnome-tweak-tool.

	EOT
}

instructions_upgrade() {
	cat <<-EOT

	Restart GNOME Shell ([Alt]+[F2], r) to load the upgraded extension.

	EOT
}
